{
    // "workbench.colorCustomizations": {
    //     "editor.background": "#101216",
    //     "sideBar.background": "#101216"
    // },
    "breadcrumbs.enabled": false,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": false,
        "scminput": false,
        "yaml": false,
        "csharp": true
    },
    "explorer.confirmDelete": false,
    "git.confirmSync": false,
    "explorer.confirmDragAndDrop": false,
    "git.enableSmartCommit": true,
    "workbench.list.smoothScrolling": true,
    "[python]": {
        "editor.formatOnType": true
    },
    "terminal.integrated.smoothScrolling": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 1,
    "workbench.editor.showTabs": "none",
    "workbench.iconTheme": "catppuccin-latte",
    "editor.stickyScroll.enabled": true,
    "workbench.tree.stickyScrollMaxItemCount": 3,
    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true,
        "**/*.d.ts.map": true,
        "**/*.d.ts": {
            "when": "$(basename).ts"
        },
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "typescript.referencesCodeLens.enabled": true,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "debug.javascript.autoAttachFilter": "onlyWithFlag",
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "window.zoomLevel": 2,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "files.autoSave": "afterDelay",
    "workbench.activityBar.location": "hidden",
    "workbench.colorTheme": "Pitch Black",
    "workbench.statusBar.visible": false,
    "workbench.layoutControl.enabled": false,
    "window.commandCenter": false,
    "editor.hover.enabled": "onKeyboardModifier",
    "editor.suggestOnTriggerCharacters": false,
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "off"
    },
    "window.title": "${folderName}/${activeFolderShort}/${activeEditorShort} ${activeRepositoryBranchName}${profileName}${separator}"
}